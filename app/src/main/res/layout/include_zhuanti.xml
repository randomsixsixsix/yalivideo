<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_zhuanti_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/more"
        android:padding="10dp"
        android:textColor="@color/app_theme"
        android:textSize="@dimen/text_16dp"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_zhuanti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_huanhyipi"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/huanyipi"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="换一批"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16dp"></TextView>
</LinearLayout>