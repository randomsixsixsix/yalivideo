<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.me.MyStartCodeActivity">


    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_mystartcode_headerpic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/default_header_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mystartcode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="@color/col_text1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_mystartcode_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="22"
                android:textColor="@color/col_text2"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_mystartcode_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="22"
                android:textColor="@color/col_text2"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@mipmap/start_code_logo"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_cir2"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:text="@string/rule_description"
            android:textColor="@color/col_text1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/col_text1"
            android:layout_marginTop="10dp"
            android:textSize="13dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/et_mystartcode_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/my_startcode_input_three"
                android:inputType="number"
                android:textColor="@color/col_text1"
                android:textSize="16dp"
                android:theme="@style/MyEditText" />

            <com.allen.library.SuperButton
                android:id="@+id/sb_mystartcode_getcode"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/click_get"
                android:textColor="@color/white"
                android:textSize="15dp"
                stv:sCornersRadius="15dp"
                android:layout_marginLeft="20dp"
                stv:sGravity="center"
                stv:sSelectorNormalColor="@color/col_text3"
                stv:sSelectorPressedColor="@color/col_text4"
                stv:sUseSelector="true" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_mystartcode_startcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/my_startcode_input_tensecond"
            android:layout_marginTop="15dp"
            android:maxLength="20"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textColor="@color/col_text1"
            android:textSize="16dp"
            android:theme="@style/MyEditText" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_mystartcode_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/yellow_gradual_bg"
        android:gravity="center"
        android:text="@string/text_complete"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>