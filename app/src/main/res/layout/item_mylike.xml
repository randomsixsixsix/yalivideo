<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_mylike_item_pic"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_cover_xhsp"/>

    <TextView
        android:id="@+id/tv_mylike_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_mylike_item_pic"
        android:text="标题"
        android:lines="2"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_mylike_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mylike_item_title"
        android:layout_toRightOf="@+id/iv_mylike_item_pic"
        android:text="2019-12-23"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/col_text4"/>

</RelativeLayout>