<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_mysetting_item_line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/col_primary_line" />

    <View
        android:id="@+id/view_mysetting_item_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/col_primary_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mysetting_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈"
            android:textColor="@color/col_text1"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_mysetting_item_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="111111"
            android:textColor="@color/col_text1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_mysetting_item_rightlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/return_right_black" />

    </LinearLayout>

</LinearLayout>