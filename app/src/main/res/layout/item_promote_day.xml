<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_cir2"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_promoteday_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/col_text1"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_promoteday_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_promoteday_item_title"
        android:gravity="center"
        android:text=""
        android:textColor="@color/col_text1"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_promoteday_item_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/yellow_cir"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="@string/promote_go"
        android:textColor="@color/col_text1"
        android:textSize="12dp" />

</RelativeLayout>