<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:bnbActiveColor="@color/app_theme"
        app:bnbBackgroundColor="@color/transparent"
        android:background="@color/bar_bottom_bg"
        app:bnbBackgroundStyle="background_style_default"
        app:bnbElevation="5dp"
        app:bnbInactiveColor="@color/gray"
        app:bnbMode="mode_fixed" />
</LinearLayout>