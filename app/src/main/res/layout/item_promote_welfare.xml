<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_promotewelfare_item_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/yuanquan" />


    <TextView
        android:id="@+id/tv_promotewelfare_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_promotewelfare_item_pic"
        android:text=""
        android:textColor="@color/col_text1"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_promotewelfare_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_promotewelfare_item_title"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_promotewelfare_item_pic"
        android:text=""
        android:textColor="@color/col_text1"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_promotewelfare_item_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/yellow_cir"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="@string/promote_go"
        android:textColor="@color/col_text1"
        android:textSize="12dp" />

</RelativeLayout>